@model PersonajesViewModel

<form method="get" asp-action="Index">
    <input type="text" name="nombre" value="@Model.NombreFiltro" placeholder="Buscar por nombre" />
    <button type="submit">Buscar</button>
</form>

<div class="characters-grid">
    @foreach (var personaje in Model.Personajes)
    {
        <div class="character-card">
            <img src="@personaje.ImagenUrl" alt="@personaje.Nombre" />
            <h3>@personaje.Nombre</h3>
            <p>@personaje.Especie</p>
            <p>@personaje.Genero</p>
            <a href="@Url.Action("Detalle", "Personajes", new { id = personaje.Id, nombre = personaje.Nombre })">Ver Detalles</a>
        </div>
    }
</div>

<div class="pagination">
    @if (Model.PaginaActual > 1)
    {
        <a asp-action="Index" asp-route-nombre="@Model.NombreFiltro" asp-route-pagina="@(Model.PaginaActual - 1)">Anterior</a>
    }

    @for (int i = 1; i <= Model.TotalPaginas; i++)
    {
        @if (i == Model.PaginaActual)
        {
            <span class="active">@i</span>
        }
        else
        {
            <a asp-action="Index" asp-route-nombre="@Model.NombreFiltro" asp-route-pagina="@i">@i</a>
        }
    }

    @if (Model.PaginaActual < Model.TotalPaginas)
    {
        <a asp-action="Index" asp-route-nombre="@Model.NombreFiltro" asp-route-pagina="@(Model.PaginaActual + 1)">Siguiente</a>
    }
</div>
